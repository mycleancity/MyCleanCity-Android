<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:background="@drawable/container_dropshadow">
    
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   
    >
    
    
        <RelativeLayout 
	android:id="@+id/feedHeaderView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/app_background_green"
    
    >
    
    <TextView
        android:id="@+id/categoryValueLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:ellipsize="end"
        android:gravity="center"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:text="Complaint Details"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
    </RelativeLayout>
    
        <RelativeLayout 
            android:id="@+id/feedBodyView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_below="@+id/feedHeaderView"
    >
    
            
    <com.sbs.android.cleanmycity.component.AppImageView
        android:id="@+id/feedImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@drawable/placeholder"
        />
    <TextView
        android:id="@+id/refLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedImageView"
        android:layout_marginTop="10dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:text="MBPJ Reference No"
        android:textColor="@color/app_green"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/refValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/refLabel"
        android:layout_marginTop="5dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text=""
        android:textColor="@color/dark_font"
        android:textSize="15sp" />
    
    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/refValueLabel"
        android:layout_marginTop="10dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:text="Title"
        android:textColor="@color/app_green"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/titleValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleLabel"
        android:layout_marginTop="5dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text=""
        android:textColor="@color/dark_font"
        android:textSize="15sp" />
    
  <TextView
        android:id="@+id/descLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleValueLabel"
        android:layout_marginTop="10dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:text="Details"
        android:textColor="@color/app_green"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/descValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descLabel"
        android:layout_marginTop="5dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text=""
        android:textColor="@color/dark_font"
        android:textSize="15sp" />  
  
  
        
    <TextView
        android:id="@+id/addressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descValueLabel"
        android:layout_marginTop="10dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:text="Address"
        android:textColor="@color/app_green"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/addressValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressLabel"
        android:layout_marginTop="5dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text=""
        android:textColor="@color/dark_font"
        android:textSize="15sp" />  
		   
    <fragment
          android:id="@+id/map"
          android:layout_width="match_parent"
          android:layout_height="300dp"
          android:layout_below="@+id/addressValueLabel"
        android:layout_marginTop="10dp"
          android:name="com.google.android.gms.maps.MapFragment"/>
        	
    
    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map"
        android:layout_marginTop="10dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:text="Reported By"
        android:textColor="@color/app_green"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/nameValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameLabel"
        android:layout_marginTop="5dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text=""
        android:textColor="@color/dark_font"
        android:textSize="15sp" />  
        
    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameValueLabel"
        android:layout_marginTop="10dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:text="Reported On"
        android:textColor="@color/app_green"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    
    <TextView
        android:id="@+id/dateValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateLabel"
        android:layout_marginTop="5dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text=""
        android:textColor="@color/dark_font"
        android:textSize="15sp"
        
         />  
        
    <TextView
        android:id="@+id/statusTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateValueLabel"
        android:layout_marginTop="10dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:text="Status"
        android:textColor="@color/app_green"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/statusTextValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusTextLabel"
        android:layout_marginTop="5dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text=""
        android:textColor="@color/dark_font"
        android:textSize="15sp"
        android:paddingBottom="15dp" /> 
        
    <RelativeLayout 
	android:id="@+id/feedStatusView"
	android:layout_below="@+id/statusTextValueLabel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_marginTop="10dp"
    
    android:background="@drawable/status_background"
    
    >
    
        
    <RelativeLayout 
	android:id="@+id/feedStatusHeaderView"
	android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/app_background_green"
    
    >
    
    <TextView
        android:id="@+id/statusLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:ellipsize="none"
        android:gravity="center"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:text="Complaint Status"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
    </RelativeLayout>
    
    <RelativeLayout 
	android:id="@+id/feedStatusBodyView"
	android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    
    android:layout_below="@+id/feedStatusHeaderView"
    android:background="@android:color/white"
    >
    
    <TextView
        android:id="@+id/statusValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="10dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:text="In Progress"
        android:textColor="@color/app_green"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/progressLabel"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/statusValueLabel"
        app:backgroundPadding="2dp"
        app:backgroundRadius="4dp"
        app:backgroundColor="@color/app_progress_background_color"
        app:progressColor="@color/progressblue"
        app:progress="0"
        app:max="1" />
        	
    
    <TextView
        android:id="@+id/dayLeftValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressLabel"
        android:layout_marginTop="5dp"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text="4 days to go"
        android:textColor="@color/half_dark_font"
        android:textStyle="italic"
        android:textSize="15sp" 
        android:paddingBottom="15dp"/>  
        </RelativeLayout>
        </RelativeLayout>
        
    <Button
	        android:id="@+id/deleteButton"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginLeft="5dp"
	        android:layout_below="@+id/feedStatusView"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/red_solidbutton"
	        android:text="Delete"
	        android:textSize="15sp"
	        android:textColor="@android:color/white"
	        />
        
    </RelativeLayout>
    
        
        <TableLayout
        android:id="@+id/footerTableLayout"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedBodyView"
        android:background="@color/app_feed_footer_bg_color"
        android:stretchColumns="0,1" >
        
        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
             >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_column="0" >
                
                <ImageView
                    android:id="@+id/commentImageView"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    android:tint="@color/app_feed_footer_font_color"
                    android:src="@drawable/ic_action_comment" />

                <TextView
                    android:id="@+id/commentLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                     android:gravity="center_vertical"
                    android:layout_toRightOf="@id/commentImageView"
                    android:text="Comment"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@drawable/comment_color_selector" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"

                android:layout_column="1" >

                 <ImageView
                    android:id="@+id/shareImageView"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    android:tint="@color/app_feed_footer_font_color"
                    android:src="@drawable/ic_action_share" />

                <TextView
                    android:id="@+id/shareLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                     android:gravity="center_vertical"
                    android:layout_toRightOf="@id/shareImageView"
                    android:text="Share"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@drawable/comment_color_selector" />
            </RelativeLayout>
            
        </TableRow>
    </TableLayout>
    
    </RelativeLayout>
    </ScrollView>